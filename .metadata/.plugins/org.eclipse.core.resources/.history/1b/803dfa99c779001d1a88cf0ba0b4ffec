package board;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;

import boardfunction.BoardDelete;
import boardfunction.BoardList;
import boardfunction.BoardRead;
import boardfunction.BoardWrite;


public class Menu {
	BoardList boardList = new BoardList();
	BoardRead boardRead = new BoardRead();
	BoardWrite boardWrite = new  BoardWrite();
	BoardDelete boardDelete = new BoardDelete();
	
	boolean loop = true;
	void printMen() throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
		bw.write("🐈‍[1.글 리스트/2.글읽기/3.글쓰기/4.글삭제/e.종료]🐈");
		bw.flush();
		
		String input = br.readLine();
		while(loop) {
		switch (input) {
		case "1" :
			boardList.output();
			break;
		case "2" :
			boardRead.read();
			break;
		case "3" :
			boardWrite.write();
			break;
		case "4" :
			boardDelete.delete();
			break;
		case "e" :
			loop = false;
			break;
		default:
			bw.write("다시 입력하세요");
			bw.flush();
			break;
		}
		}
		
	}
}
