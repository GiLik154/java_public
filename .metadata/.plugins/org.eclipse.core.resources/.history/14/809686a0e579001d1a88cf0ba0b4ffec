package board;

import java.io.*;
import java.util.*;
import boardfunction.*;

public class Menu {
	BoardInfo boardInfo = new BoardInfo();
	BoardList boardList = new BoardList();
	BoardRead boardRead = new BoardRead();
	BoardWrite boardWrite = new BoardWrite();
	BoardDelete boardDelete = new BoardDelete();
	List<BoardInfo> list = new ArrayList<>();

	boolean loop = true;
	String input;

	BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
	BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
	
	void printMen() throws IOException {

		while (loop) {
			bw.write("ğŸˆâ€[1.ê¸€ ë¦¬ìŠ¤íŠ¸/2.ê¸€ì½ê¸°/3.ê¸€ì“°ê¸°/4.ê¸€ì‚­ì œ/e.ì¢…ë£Œ]ğŸˆ");
			bw.flush();
			input = br.readLine();
			
			
			switch (input) {
			case "1":
				boardList.output(list);
				break;
				
			case "2":
				boardRead.read();
				break;
				
			case "3":
				
				boardWrite.write();
				boardInfo.recive(boardWrite);
				list.add(boardInfo);
				break;
				
			case "4":
				boardDelete.delete();
				break;
				
			case "e":
				loop = false;
				break;
				
			default:
				bw.write("ë‹¤ì‹œ ì…ë ¥í•˜ì„¸ìš”");
				bw.flush();
				break;
			}
		}

	}
}
