package board;

import java.io.*;
import java.util.*;
import boardfunction.*;
import textoutput.TextInput;
import textoutput.TextOut;

public class Menu {
	BoardList boardList = new BoardList();
	BoardRead boardRead = new BoardRead();
	BoardWrite boardWrite = new BoardWrite();
	BoardDelete boardDelete = new BoardDelete();
	TextOut textOut = new TextOut();
	TextInput textInput = new TextInput();
	List<BoardInfo> list = new ArrayList<>();

	boolean loop = true;
	String input;

	BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
	BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));

	void printMen() {
		textInput.createFile();
		textInput.inputText(list);
		boardWrite.reciveNum(list.size());
		try {
			while (loop) {
				BoardInfo boardInfo = new BoardInfo();
				bw.write("ğŸˆâ€[1.ê¸€ ë¦¬ìŠ¤íŠ¸/2.ê¸€ì½ê¸°/3.ê¸€ì“°ê¸°/4.ê¸€ì‚­ì œ/5.ê¸€ìˆ˜ì •/e.ì¢…ë£Œ]ğŸˆ");
				bw.flush();
				input = br.readLine();

				switch (input) {
				case "1": // ê¸€ ë¦¬ìŠ¤íŠ¸
					boardList.output(list);
					break;

				case "2": // ê¸€ ì½ê¸°
					boardRead.select();
					boardRead.read(list);
					break;

				case "3": // ê¸€ì“°ê¸°
					boardWrite.write();
					boardInfo.recive(boardWrite);
					list.add(boardInfo);
					break;

				case "4": // ê¸€ì‚­ì œ
					boardDelete.select();
					boardDelete.compareNum(list);
					break;
					
				case "5": // ìˆ˜ì •
					BoardCorrect.select();
					boardDelete.compareNum(list);
					break;

				case "e": // ì¢…ë£Œ
					textOut.outputText(list);
					loop = false;
					break;

				default: //í‹€ë¦° ê²ƒ ì…ë ¥ì‹œ ë‹¤ì‹œ ì…ë ¥
					bw.write("ë‹¤ì‹œ ì…ë ¥í•˜ì„¸ìš”");
					bw.flush();
					break;
				}
			}
		} catch (IOException e) { // ì˜ˆì™¸ì²˜ë¦¬
			e.printStackTrace();
		}

	}
}
